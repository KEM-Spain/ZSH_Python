#!/usr/bin/zsh
#Inline ansi
BOLD="\033[1m"
ITALIC="\033[3m"
RESET="\033[m"
REVERSE="\033[7m"
STRIKE="\033[9m"
UNDER="\033[4m"

BLACK_BG="\033[40m"

BLUE_FG="\033[34m"
CYAN_FG="\033[36m"
GREEN_FG="\033[32m"
MAGENTA_FG="\033[35m"
RED_FG="\033[31m"
WHITE_FG="\033[37m"
YELLOW_FG="\033[33m"

WHITE_ON_GREY="\033[0m\033[0;1;37;100m"

# Imports
_LIB_DIR=/usr/local/lib
source ${_LIB_DIR}/LIB_INIT.zsh # Must be first
source ${_LIB_DIR}/UTILS.zsh
source ./SELECT.zsh
source ${_LIB_DIR}/LIB_DEPS.zsh # Must be last

typeset -a LIST
typeset -A _UTILS_DESC=(
external "EXTERNAL:verify or mount external drive"
fstab_info "FSTAB:display fstab details"
space "SPACE:show current disk usage"
unplug "DETACH:safely detach device"
usbdisks "USB:display usb disk details"
)

_DEBUG=${1}
clear
cursor_off

while true;do
	LIST=()
	LIST+="one"
	LIST+="two"
	LIST+="three"
	LIST+="four"
	LIST+="five"
	LIST+="six"
	LIST+="seven"
	LIST+="eight"
	LIST+="nine"
	LIST+="ten"
	sel_set_list ${LIST}
	sel_list -c -T"NUM" -x8 -y35 -H"<r>Unsorted Numbers<N>" -M"Some really long string of stuff that needs to be cleared"

	LIST=()
	LIST+="apple"
	LIST+="orange"
	LIST+="kiwi"
	LIST+="cherry"
	LIST+="strawberry"
	LIST+="blueberry"
	LIST+="plum"
	LIST+="peach"
	LIST+="tangerine"
	LIST+="pear"
	sel_set_list ${(on)LIST}
	sel_list -c -T"FRUIT" -O${CYAN_FG} -H"Fruit" -F"<w>Pick a Fruit or <h>(q)uit<N>"

	sel_set_list ${(v)_UTILS_DESC}
	sel_list -c -T"DUT" -O${CYAN_FG} -C -H"Disk Utilities" -F"<w>Show Disk Utilities usage or <h>(q)uit and a whole bunch of other stuff<N>"

	LIST=()
	LIST+="Item 1"
	LIST+="Item 2"
	LIST+="Item 3"
	LIST+="Item 4"
	LIST+="Item 5"
	LIST+="Item 6"
	LIST+="Item 7"
	LIST+="Item 8"
	LIST+="Item 9"
	LIST+="Item 10"
	LIST+="Item 11"
	LIST+="Item 12"
	LIST+="Item 13"
	LIST+="Item 14"
	LIST+="Item 15"
	LIST+="Item 16"
	LIST+="Item 17"
	LIST+="Item 18"
	LIST+="Item 19"
	LIST+="Item 20"
	LIST+="Item 21"
	LIST+="Item 22"
	LIST+="Item 23"
	LIST+="Item 24"
	LIST+="Item 25"
	LIST+="Item 26"
	LIST+="Item 27"
	LIST+="Item 28"
	LIST+="Item 29"
	LIST+="Item 30"
	LIST+="Item 31"
	LIST+="Item 32"
	LIST+="Item 33"
	LIST+="Item 34"
	LIST+="Item 35"
	LIST+="Item 36"
	LIST+="Item 37"
	LIST+="Item 39"
	LIST+="Item 40"
	LIST+="Item 41"
	LIST+="Item 42"
	LIST+="Item 43"
	LIST+="Item 44"
	LIST+="Item 45"
	LIST+="Item 46"
	LIST+="Item 47"
	LIST+="Item 48"
	LIST+="Item 49"
	LIST+="Item 50"
	sel_set_list ${(on)LIST}
	sel_list -c -T"LONG" -O${CYAN_FG} -H"Long List" -F"<w>Pick an Item or <h>(q)uit<N>"
done

cursor_on
