touch "./Completed/movie_three/movie_three.720p.WEB.x265-MiNX[TGx].mkv"
touch "./Completed/movie_three/movie_three.nfo"
touch "./Completed/movie_three/movie_three_other_stuff.srt"
touch "./Completed/movie_three/movie_three.sample"


