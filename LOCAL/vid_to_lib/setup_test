#!/usr/bin/zsh

for D in $(find -type d);do
	[[ ${D} =~ "swap" ]] && rm -rf ${D}
done

(
rm -rf ./Completed/*
rm -rf ./Library/*
) 2>/dev/null

md "./Completed/'Dont.Breathe.2016.1080p.BluRay.1400MB.DD5.1.x264-GalaxyRG[TGx]"
