strip_space () {
	local LINE

	while read LINE;do
		tr -d '\011' | tr -s '\012' | sed '/^$/d' <<< ${LINE}
	done
}

query_rumble () {
	local SEARCHTERM=${1}
	local QRY_ARG=${2:l}
	local -A FIELD_MAP=("author" 1 "title" 2 "age" 3 "url" 4 "time" 5 "agetime" "3,5")
	local -A LAST_MSG=($(box_coords_get ${_LAST_MSG_TAG}))
	local -a NDX_OUT=()
	local -a TMP=()
	local -a AUTHORS=()
	local AGE AUTHOR TITLE URL TIME AGETIME
	local GEN_SEARCH=''
	local MSG=''
	local NDX=''
	local PG=''
	local QRY=''
	local STR=''
	local L

	QRY_TYPE=${QUERY_MAP[${QRY_ARG}]}

	[[ -z ${QRY_TYPE} ]] && msg_box -p -PK "Invalid query arg:${QRY_ARG}" && return 1

	ping -w1 www.rumble.com >/dev/null
	[[ ${?} -ne 0 ]] && msg_box -p -PK "Rumble is down" && return 1

	[[ ${_DEBUG} -ge ${_LOW_DBG} ]] && dbg "${functrace[1]} called ${0}:${LINENO}: ARGC:${#@}"

	[[ -n ${SEARCHTERM} ]] && g_QUERY_KEY=${SEARCHTERM}

	if [[ ${QRY_TYPE} == 'live' ]];then
		msg_box -c "Requesting <c><I>livestream channel<N> search..."

		QRY="https://rumble.com/c/${g_QUERY_KEY}/livestreams" && echo "\nQRY:${QRY}" >&2

		PG=$(wget -q -O - ${QRY})
		wget -q -O - ${QRY} > ${_CFG_DIR}/Rumble.qry

		TITLES=("${(f)$(pup --charset utf8 '.thumbnail__title attr{title}' <<< ${PG})}")
		LINKS=("${(f)$(pup --charset utf8 '.title__link attr{href}' <<< ${PG})}")
		AGES=("${(f)$(pup --charset utf8 '.videostream__time text{}' <<< ${PG})}")
		DURATIONS=("${(f)$(pup --charset utf8 '.videostream__badge text{}' <<< ${PG} | grep -E '[0-9].*')}")
	elif [[ ${QRY_TYPE} == 'channel' ]];then
		msg_box -c "Requesting <c><I>channel<N> search..."

		QRY="https://rumble.com/c/${g_QUERY_KEY}?page=1" && echo "\nQRY:${QRY}" >&2

		PG=$(wget -q -O - ${QRY})
		wget -q -O - ${QRY} > ${_CFG_DIR}/Rumble.qry

		TITLES=("${(f)$(pup --charset utf8 '.thumbnail__title attr{title}' <<< ${PG})}")
		LINKS=("${(f)$(pup --charset utf8 '.title__link attr{href}' <<< ${PG})}")
		AGES=("${(f)$(pup --charset utf8 '.videostream__time text{}' <<< ${PG} | strip_space)}")
		DURATIONS=("${(f)$(pup --charset utf8 '.videostream__badge text{}' <<< ${PG} | strip_space | grep -E '[0-9].*')}")
	elif [[ ${QRY_TYPE} == 'general' ]];then
		msg_box -c "Requesting <c><I>general<N> search..."
		g_SEARCH_TYPE=general
		GEN_SEARCH=$(sed 's/ /%20/g' <<<${g_QUERY_KEY})

		QRY="https://rumble.com/search/all?q=${GEN_SEARCH}&sort=date&section=sort" && echo "\nQRY:${QRY}" >&2

		PG=$(wget -q -O - ${QRY})
		wget -q -O - ${QRY} > ${_CFG_DIR}/Rumble.qry

		AUTHORS=("${(f)$(pup --charset utf8 '.ellipsis-1 text{}' <<< ${PG} | grep -vi 'verified')}")
		TITLES=("${(f)$(pup --charset utf8 '.video-item--title text{}' <<< ${PG})}")
		LINKS=("${(f)$(pup --charset utf8 '.video-item--a attr{href}' <<< ${PG})}")
		AGES=("${(f)$(pup --charset utf8 '.video-item--time text{}' <<< ${PG})}")
		DURATIONS=("${(f)$(pup --charset utf8 '.video-item--duration attr{data-value}' <<< ${PG})}")
	elif [[ ${QRY_TYPE} == 'user' ]];then
		msg_box -c "Requesting <c><I>livestream user<N> search..."
		g_SEARCH_TYPE="user livestreams"
		GEN_SEARCH=$(sed 's/ /%20/g' <<<${g_QUERY_KEY})

		QRY="https://rumble.com/user/${g_QUERY_KEY}/livestreams" && echo "\nQRY:${QRY}" >&2

		PG=$(wget -q -O - ${QRY})
		wget -q -O - ${QRY} > ${_CFG_DIR}/Rumble.qry

		TITLES=("${(f)$(pup --charset utf8 '.thumbnail__title attr{title}' <<< ${PG})}")
		LINKS=("${(f)$(pup --charset utf8 '.title__link attr{href}' <<< ${PG})}")
		AGES=("${(f)$(pup --charset utf8 '.videostream__time text{}' <<< ${PG})}")
		DURATIONS=("${(f)$(pup --charset utf8 '.videostream__badge text{}' <<< ${PG} | grep -E '[0-9].*')}")
	fi

	# Normalize tables
	NDX=0
	for L in ${(a)DURATIONS};do
		((NDX++))
		if [[ ! ${L} =~ ':' ]] && NDX_OUT+=${NDX} && continue # Missing colon indicates a live broadcast - eliminate
		TMP+="${L}"
	done
	DURATIONS=(${TMP})
	TMP=()

	NDX=0
	for L in ${(a)TITLES};do
		((NDX++))
		[[ ${NDX_OUT[(i)${NDX}]} -le ${#NDX_OUT} ]] && continue
		TITLE=$(recode UTF8..ISO-8859-15 <<<${L:gs/|/#/} 2>/dev/null) # Convert UTF-8
		TITLE=$(html2text -width ${_MAX_COLS} -ascii <<<${TITLE} 2>/dev/null) # Convert any HTML 
		TMP+="${TITLE}"
	done
	TITLES=(${TMP})
	TMP=()

	NDX=0
	for L in ${(a)LINKS};do
		((NDX++))
		[[ ${NDX_OUT[(i)${NDX}]} -le ${#NDX_OUT} ]] && continue
		TMP+="${L}"
	done
	LINKS=(${TMP})
	TMP=()

	# Marshall data
	NDX=0
	if [[ ${QRY_TYPE} == 'general' ]];then
		for L in ${TITLES};do
			((NDX++))
			TMP+="${AUTHORS[${NDX}]}}|${TITLES[${NDX}]}|${AGES[${NDX}]}|${LINKS[${NDX}]}|${DURATIONS[${NDX}]}"
		done
	else
		for L in ${TITLES};do
			((NDX++))
			TMP+="${(C)g_QUERY_KEY}|${TITLES[${NDX}]}|${AGES[${NDX}]}|${LINKS[${NDX}]}|${DURATIONS[${NDX}]}"
		done
	fi

	# Return failed search status
	if ! arr_is_populated "${TMP}";then
		return 1
	fi

	# Build video listing
	for L in ${TMP};do
		AGE=$(cut -d'|' -f${FIELD_MAP[age]} <<<${L})
		AUTHOR=$(cut -d'|' -f${FIELD_MAP[author]} <<<${L})
		TITLE=$(cut -d'|' -f${FIELD_MAP[title]} <<<${L})
		URL=$(cut -d'|' -f${FIELD_MAP[url]} <<<${L}); URL="https://rumble.com${URL}"
		TIME=$(cut -d'|' -f${FIELD_MAP[time]} <<<${L})
		AGETIME=$(cut -d'|' -f${FIELD_MAP[agetime]} <<<${L});	AGETIME="(${AGETIME:s/|/ /})"

		_LOCAL_LIST+="${AGE}|${AUTHOR}|${TITLE}|${URL}|${TIME}|${AGETIME}"
	done

	return 0
}

#--Begin GetOpts--
local -a OPTIONS
